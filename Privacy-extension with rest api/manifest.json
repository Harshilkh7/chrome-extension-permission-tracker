{
  "manifest_version": 3,
  "name": "Privacy Guard",
  "version": "1.2",
  "description": "Tracks and updates website permissions securely.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "webNavigation"  
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["injected.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
